<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title> <%= title %> </title>
    <!-- 引入 echarts.js -->
    <script src="./javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/echarts-all-3.js"></script>
    <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/extension/dataTool.min.js"></script>
    <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/map/js/china.js"></script>
    <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/map/js/world.js"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=ZUONbpqGBsYGXNIYHicvbAbM"></script>
    <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/extension/bmap.min.js"></script>
</head>
<body>
    <form id="myform"  method="get">
        <label for="sensor"> Sensor id: <input type="number" name="id" value=1><br>
        <label for="precision"> 每分钟/每天: <input type="text" name="precision" value='min'><br>
        <label for="stime"> 开始Date : </label><input id="stime" name="st" type="date" value="2017-02-01"/><br>
        <label for="etime"> 结束Date : </label><input id="etime" name="et" type="date" value="2017-03-01"/><br>
        <input type="button"  class='button' id="lastinput"  value="确认提交"/><br><br>
    </form>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="width: 800;height:600px;"></div>
    
    <script type="text/javascript">
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));

        var option = {
        title: {
            text: 'HangZhou AQI'
        },
        tooltip: {
            trigger: 'axis'
        },
        xAxis: {
            data: []
        },
        yAxis: {
            splitLine: {
                show: false
            }
        },
        toolbox: {
            left: 'center',
            feature: {
                dataZoom: {
                    yAxisIndex: 'none'
                },
                restore: {},
                saveAsImage: {}
            }
        },
        dataZoom: [{
            startValue: '2017-02-01'
        }, {
            type: 'inside'
        }],
        visualMap: {
            top: 10,
            right: 10,
            pieces: [{
                gt: 0,
                lte: 50,
                color: '#096'
            }, {
                gt: 50,
                lte: 100,
                color: '#ffde33'
            }, {
                gt: 100,
                lte: 150,
                color: '#ff9933'
            }, {
                gt: 150,
                lte: 200,
                color: '#cc0033'
            }, {
                gt: 200,
                lte: 300,
                color: '#660099'
            }, {
                gt: 300,
                color: '#7e0023'
            }],
            outOfRange: {
                color: '#999'
            }
        },
        series: {
            name: 'HangZhou AQI',
            type: 'line',
            data: [],
            markLine: {
                silent: true,
                data: [{
                    yAxis: 50
                }, {
                    yAxis: 100
                }, {
                    yAxis: 150
                }, {
                    yAxis: 200
                }, {
                    yAxis: 300
                }]
            }
        }
    };
        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);

        $(document).ready(function() { 
            $('#lastinput').click(function() {
              $.ajax({
                 url:'/api/air',
                 type:'get',         //数据发送方式
                 dataType:'json',   //接受数据格式
                 data:$("#myform").serialize(),
                 success:function(msg, textStatus) {
                    option.xAxis.data = msg.x;
                    option.series.data = msg.y;
                    myChart.showLoading();
                    myChart.setOption(option);
                    myChart.hideLoading();
                 }
              });
            });
        });

    </script>
</body>
</html>